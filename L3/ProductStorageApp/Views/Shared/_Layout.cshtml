<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - ProductStorageApp</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/css/now-ui-dashboard.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="orange">
            <div class="logo">
                <a href="/" class="simple-text logo-normal">Product Storage</a>
            </div>
            <div class="sidebar-wrapper" id="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href="/Home">
                            <i class="now-ui-icons design_app"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Products">
                            <i class="now-ui-icons design_app"></i>
                            <p>Products</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Chart">
                            <i class="now-ui-icons education_atom"></i>
                            <p>Chart</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel" id="main-panel">
            <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="@Context.Request.Path">@ViewData["Title"]</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <form>
                            <div class="input-group no-border">
                                <input type="text" value="" class="form-control" placeholder="Search...">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <i class="now-ui-icons ui-1_zoom-bold"></i>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <ul class="navbar-nav">

                        </ul>
                    </div>
                </div>
            </nav>
            <div class="panel-header panel-header-sm"></div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/assets/js/core/jquery.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/assets/js/core/popper.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/assets/js/core/bootstrap.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.jquery.min.js" type="text/javascript"
        asp-append-version="true"></script>
    <script src="~/assets/js/now-ui-dashboard.js" type="text/javascript" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
