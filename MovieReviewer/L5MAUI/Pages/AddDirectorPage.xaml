<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="L5MAUI.Pages.AddDirectorPage"
             Title="Add Director">
    <ScrollView>
        <VerticalStackLayout
Padding="20">
            <StackLayout Padding="10" BindingContext="{Binding Director}">
                <Label Text="Name:" FontAttributes="Bold" />
                <Entry Text="{Binding Name}" />

            </StackLayout>
            <HorizontalStackLayout>
                <Button Text="Add" Command="{Binding AddCommand}"></Button>
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Directors}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="5" CornerRadius="10">
                            <StackLayout>
                                <Label Text="{Binding Name}"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>